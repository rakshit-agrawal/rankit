<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:minHeight="96dp"
    android:gravity="center"
    android:orientation="vertical"

    >

    <ImageView
            android:id="@+id/item_img"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="center"
            android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_marginRight="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_marginStart="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_marginEnd="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingRight="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingEnd="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingStart="@dimen/abc_action_bar_icon_vertical_padding_material"
            />

    <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:padding="2dp"
            android:gravity="center"
            />

    <TextView
        android:id="@+id/item_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:padding="2dp"
        android:gravity="center"
        />

</LinearLayout>